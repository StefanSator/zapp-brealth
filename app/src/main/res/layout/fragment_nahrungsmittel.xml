<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/nahrungText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewProteinLabel"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/textViewFatLabel"
        android:layout_centerHorizontal="true"
        android:text="EiweiÃŸ:"
        app:layout_constraintTop_toBottomOf="@+id/nahrungText"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/textViewCarbsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nahrungSubmitButton"
        android:layout_alignTop="@+id/textViewProteinLabel"
        android:text="Kohlenhydrate:"
        app:layout_constraintTop_toBottomOf="@+id/nahrungText"
        tools:layout_editor_absoluteX="162dp" />

    <TextView
        android:id="@+id/textViewFatLabel"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="76dp"
        android:text="Fett:"
        app:layout_constraintTop_toBottomOf="@+id/nahrungSubmitButton"
        tools:layout_editor_absoluteX="307dp" />

    <Button
        android:id="@+id/nahrungSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/nahrungText"
        android:layout_marginEnd="15dp"
        android:text="Submit"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewFatLabel"
        android:layout_marginTop="108dp"
        android:text="" />

    <TextView
        android:id="@+id/textViewProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewProteinLabel"
        android:layout_alignTop="@+id/textViewFat"
        android:text="" />

    <TextView
        android:id="@+id/textViewCarbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCarbsLabel"
        android:layout_alignTop="@+id/textViewFat"
        android:text="" />

    <ListView
        android:id="@+id/foodList"
        android:layout_width="wrap_content"
        android:layout_height="384dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewFat"
        android:drawSelectorOnTop="false" />
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/nahrungsmittel_list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>-->

</RelativeLayout>
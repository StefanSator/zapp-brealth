<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightblack">

    <TextView
        android:id="@+id/vocable_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="@color/yellow"
        android:textSize="26sp"
        android:text="Rückwärts"/>

    <TextView
        android:id="@+id/vocable_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vocable_task_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:textColor="@color/yellow"
        android:textSize="40sp"
        android:text="Wanderlust"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/walkingman_animation"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:lottie_fileName="walkingman.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

</RelativeLayout>
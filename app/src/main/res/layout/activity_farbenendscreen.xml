<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Ergebnis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/rechnenend_ergebnis"
        android:textSize="42sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Bemerkung"
        android:layout_below="@+id/Ergebnis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/falsche_Antwort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Bemerkung"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/back_button"
        android:layout_below="@+id/falsche_Antwort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Fertig"
        android:textSize="24sp"
        android:onClick="endResultScreen"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E0">

    <Button
        android:id="@+id/brain_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/colorButton1"
        android:fontFamily="casual"
        android:onClick="gotoBrainMenu"
        android:text="@string/brain_mainmenu"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/health_button"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/health_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/circle_button"
        android:onClick="gotoHealthMenu"
        android:text="@string/health_mainmenu"
        android:backgroundTint="@color/colorButton2"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:textSize="26sp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/brain_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/brealth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle_button"
        android:onClick="gotoBrealthMenu"
        android:text="@string/brealth_mainmenu"
        android:backgroundTint="@color/colorButton4"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
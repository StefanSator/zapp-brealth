<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stefansator.brealth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainMenu" />
        <activity
            android:name=".BrainMenu"
            android:label="Gehirntraining" />
        <activity android:name=".HealthMenu" />
        <activity android:name=".BrealthMenu" />
        <activity
            android:name=".BrainTaskMenu"
            android:label="Übungen" />
        <activity
            android:name=".BrainDailyMenu"
            android:label="Tägliche Aufgabe" />
        <activity
            android:name=".RechnenTaskMenu"
            android:label="Rechnen" />
        <activity
            android:name=".RechnenTask"
            android:label="Rechnen" />
        <activity
            android:name=".TaskEndscreen"
            android:label="Ergebnis" />
        <activity
            android:name=".MemoryTask"
            android:label="Memory" />
        <activity
            android:name=".Zentrale"
            android:label="@string/title_activity_zentrale"
            android:parentActivityName=".HealthMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.stefansator.brealth.HealthMenu" />
        </activity>

        <activity android:name=".LesenTask" android:label="Laut Lesen"></activity>
        <activity android:name=".FarbenTaskMenu" android:label="Farben"></activity>
        <activity android:name=".FarbenEasyMode" android:label="Farben Easy Mode"></activity>
        <activity android:name=".FarbenHardMode" android:label="Farben Hard Mode"></activity>
        <activity android:name=".FarbenEndscreen" android:label="Ergebnis"></activity>
        <receiver android:name=".AlarmReceiver" android:enabled="true" android:process=":remote" />

    </application>

</manifest>